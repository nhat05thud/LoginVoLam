@using LoginVoLam.Web.Common
@{
    ViewBag.Title = "Index";
}

<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Xin chào!
            </div>
            <div class="card-body">
                @if (Session[ConstantKey.USER_SESSION] != null)
                {
                    <p>Name: @(((UserLogin)Session[ConstantKey.USER_SESSION]).UserName)</p>
                    <a href="@Url.Action("Logout","Account")" class="btn btn-warning">Logout</a>
                }
            </div>
        </div>

    </div>
</div>
